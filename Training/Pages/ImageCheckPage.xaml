<Page x:Class="Training.Pages.ImageCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Training.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImageCheckPage">

    <Grid>

        <StackPanel VerticalAlignment="Center"
                    Width="400">
            
            <Image x:Name="Img"
                   MaxHeight="400"/>

            <Button x:Name="BtnDownload"
                    Content="Загрузить изображение"
                    Click="BtnDownload_Click"
                    Style="{StaticResource BlueButton}"
                    Margin="0 20 0 0"/>

            <Button x:Name="BtnRotate"
                    Content="Повернуть изображение"
                    Click="BtnRotate_Click"
                    Style="{StaticResource BlueButton}"
                    Margin="0 20 0 0"/>
            
        </StackPanel>
        
    </Grid>
</Page>
