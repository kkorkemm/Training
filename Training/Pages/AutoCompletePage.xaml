<Page x:Class="Training.Pages.AutoCompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Training.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoCompletePage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Width="300"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     x:Name="TextName"
                     TextChanged="TextName_TextChanged"/>
            <ListView x:Name="ListUsers"
                      Width="300"
                      DisplayMemberPath="Name"
                      PreviewMouseDown="ListUsers_PreviewMouseDown"/>
        </StackPanel>
    </Grid>
</Page>
